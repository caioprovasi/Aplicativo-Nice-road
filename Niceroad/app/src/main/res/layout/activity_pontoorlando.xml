<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="caio.niceroad.pontoorlando">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="507dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/todo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/pontofinal2"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="141dp"
        android:fontFamily="@font/avenir"
        android:text="Universal Orlando Resort"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_bright" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/avenir"
        android:text="Endereço: 6000 Universal Blvd, Orlando, FL 32819, EUA
Inauguração: 7 de junho de 1990
Atendimento ao cliente: +1 407-363-8000"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/avenir"
        android:text="@string/pontos_tur_sticos"
        android:textSize="18sp" />

</RelativeLayout>
