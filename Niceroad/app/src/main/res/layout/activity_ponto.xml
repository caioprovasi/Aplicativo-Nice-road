<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="caio.niceroad.ponto">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="507dp"
        android:adjustViewBounds="false"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/caio"
        tools:layout_editor_absoluteX="0dp" android:contentDescription="@string/todo" />



    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="141dp"
        android:fontFamily="@font/avenir"
        android:text="@string/est_tua_da_liberdade"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_bright" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/avenir"
        android:text="@string/endere_o_nova_york_ny_10004_eua_altura_93_m_in_cio_da_constru_o_setembro_de_1875"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/avenir"
        android:text="@string/pontos_tur_sticos"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="214dp"
        android:text="Button" />
</RelativeLayout>




