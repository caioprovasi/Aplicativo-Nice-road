        android:background="@android:color/transparent"
        android:text=""
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="339dp" />

    <Button
        android:id="@+id/btnCognato"
        android:layout_width="163dp"
        android:layout_height="147dp"
        android:layout_alignStart="@+id/btnPonto"
        android:layout_alignTop="@+id/btnFazer"
        android:background="@android:color/transparent"
        android:text="" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/avenir"
        android:text="Dicas"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnFazer"
        android:layout_alignEnd="@+id/textView15"
        android:layout_alignStart="@+id/btnFazer"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/avenir"
        android:text="Atividades"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnPonto"
        android:layout_alignStart="@+id/btnPonto"
        android:layout_alignTop="@+id/textView15"
        android:fontFamily="@font/avenir"
        android:text="Pontos turÃ­sticos"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnCognato"
        android:layout_alignStart="@+id/btnCognato"
        android:layout_alignTop="@+id/textView16"
        android:fontFamily="@font/avenir"
        android:text="Cognatos"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:fontFamily="@font/avenir"
        android:text="Tela principal"
        android:textColor="@color/ic_launcher_background"
        android:textSize="18sp" />

</RelativeLayout>
