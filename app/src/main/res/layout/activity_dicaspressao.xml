<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="caio.niceroad.dicaspressao">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="507dp"
        android:adjustViewBounds="false"
        android:background="@android:color/background_light"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/dicaspressao"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/play_pressao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="119dp"
        android:text=""
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:fontFamily="@font/avenir"
        android:text="Saúde"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/avenir"
        android:text="Can you help me? my pressure is low"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="68dp"
        android:fontFamily="@font/avenir"
        android:text="Você pode me ajudar? minha pressão está baixa"
        android:textAlignment="center" />

</RelativeLayout>
