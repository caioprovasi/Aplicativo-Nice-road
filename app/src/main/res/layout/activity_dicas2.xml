<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="caio.niceroad.dicas2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="507dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="false"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/dicas2fo"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnDicas"
        android:layout_width="160dp"
        android:layout_height="93dp"
        android:layout_above="@+id/textView25"
        android:layout_alignStart="@+id/btnFazer"
        android:background="@android:color/transparent"
        android:text=""
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/btnPonto"
        android:layout_width="160dp"
        android:layout_height="88dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnDicas"
        android:layout_marginEnd="23dp"
        android:background="@android:color/transparent"
        android:text=""
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/btnFazer"
        android:layout_width="160dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="88dp"
        android:layout_marginStart="25dp"
        android:background="@android:color/transparent"
        android:text=""
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="339dp" />

    <Button
        android:id="@+id/btnCognato"
        android:layout_width="170dp"
        android:layout_height="101dp"
        android:layout_alignStart="@+id/btnPonto"
        android:layout_alignTop="@+id/btnFazer"
        android:background="@android:color/transparent"
        android:text="" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btnPonto"
        android:fontFamily="@font/avenir"
        android:text="Hamburger"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="62dp"
        android:fontFamily="@font/avenir"
        android:text="Sorvete"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView25"
        android:layout_alignBottom="@+id/textView25"
        android:layout_alignEnd="@+id/btnPonto"
        android:layout_alignStart="@+id/btnPonto"
        android:fontFamily="@font/avenir"
        android:text="Refrigerante"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnPonto"
        android:layout_alignTop="@+id/textView26"
        android:fontFamily="@font/avenir"
        android:text="Milk shake"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:fontFamily="@font/avenir"
        android:text="Dicas Alimentação" />

</RelativeLayout>
