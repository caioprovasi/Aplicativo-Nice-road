<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="caio.niceroad.atividadepassado1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light"
        app:srcCompat="@mipmap/lisbon" />
    <RadioGroup
        android:layout_width="223dp"
        android:layout_height="127dp"
        android:layout_above="@+id/Button"
        android:layout_alignEnd="@+id/imageView2">

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/radioButton4"
            android:layout_centerHorizontal="true"
            android:onClick="selectItem"
            android:text="returns"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView14"
            android:layout_marginBottom="59dp"
            android:duplicateParentState="false"
            android:onClick="selectItem"
            android:text="returned"
            android:textAlignment="center" />
    </RadioGroup>
    <Button
        android:id="@+id/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="#b1ac0a"
        android:fontFamily="@font/avenir"
        android:text="@string/Enviar"
        android:textSize="12sp"
        android:onClick="finalSelection"
        tools:ignore="OnClick" />


    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152dp"
        android:fontFamily="@font/avenir"
        android:text="@string/He___to_Lisbon_in_1905"
        android:textAlignment="center"
        android:textColor="#080808" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        android:fontFamily="@font/avenir"
        android:text="@string/Passado"
        android:textAlignment="center"
        android:textColor="#080808"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/final_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>
